{
	"author": "Luis Blanco <luisblanco1337@gmail.com>",
	"name": "3d-core-raub",
	"version": "3.7.0",
	"description": "An extensible Node3D core for desktop applications",
	"license": "MIT",
	"main": "index.js",
	"keywords": [
		"core",
		"3d",
		"node3d",
		"opengl",
		"webgl",
		"glfw",
		"graphics",
		"gl",
		"image"
	],
	"files": [
		"js",
		"index.js",
		"index.d.ts",
		"LICENSE",
		"package.json",
		"README.md"
	],
	"engines": {
		"node": ">=16.17.0",
		"npm": ">=8.15.0"
	},
	"scripts": {
		"eslint": "eslint .",
		"test": "jest --coverage=false --watch",
		"test-ci": "jest --coverage=false --verbose",
		"test-coverage": "rm -rf doc/jest && jest --coverage --silent"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/node-3d/3d-core-raub.git"
	},
	"jest": {
		"globalSetup": "<rootDir>/test/setup.js",
		"testEnvironment": "node",
		"testMatch": [
			"**/*.test.js"
		],
		"coverageDirectory": "doc/jest",
		"coverageReporters": [
			"lcov"
		],
		"collectCoverageFrom": [
			"**/*.js",
			"!**/*.test.js"
		]
	},
	"dependencies": {
		"addon-tools-raub": "^6.0.2",
		"three": "0.146.0",
		"image-raub": "^3.3.1",
		"glfw-raub": "^4.8.0",
		"webgl-raub": "^2.4.0"
	},
	"devDependencies": {
		"eslint-plugin-jest": "^27.1.6",
		"eslint-plugin-node": "^11.1.0",
		"eslint": "^8.29.0",
		"jest": "^29.3.1",
		"typescript": "^4.9.3"
	}
}
